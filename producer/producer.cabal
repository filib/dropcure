name:                producer
version:             0.1.0.0
homepage:            https://github.com/filib/dropcure/producer
license:             BSD3
license-file:        LICENSE
author:              Philip Cunningham
maintainer:          hello@filib.io
copyright:           2017 Philip Cunningham
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Lib
                     , Producer.Client
                     , Producer.Config
                     , Producer.Server
                     , Producer.Types
  build-depends:       base >= 4.7 && < 5
                     , amqp
                     , bytestring
                     , http-types
                     , mtl
                     , network
                     , retry
                     , text
                     , wai
                     , wai-websockets
                     , warp
                     , websockets
  default-language:    Haskell2010

executable producer
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , producer
  default-language:    Haskell2010

test-suite producer-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , producer
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/filib/dropcure/producer
